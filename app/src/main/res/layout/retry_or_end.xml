<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rt_relativeLayout1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#60606060"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <Button
        android:id="@+id/rt_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="もう一度" />

    <Button
        android:id="@+id/ed_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rt_button"
        android:text="タイトルへ" />

    <TextView
        android:id="@+id/roe_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@id/rt_button"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:gravity="center"
        android:textSize="50dp"
        android:textColor="#535353"/>
</RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/rt_relativeLayout1">

        <RelativeLayout
            android:id="@+id/roe_relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/shape_rounded_corners_5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/roe_highScoreText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="HighScore"
                android:textSize="50dp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/roe_highScore"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/roe_highScoreText"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="40dp"
                android:textColor="#f9d162"/>

            <TextView
                android:id="@+id/roe_new_record"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/roe_highScore"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:text="New Record!"
                android:textColor="#f44f57"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
